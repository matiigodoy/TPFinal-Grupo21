<!-- Page content -->
  <div class="w3-content" style="max-width:2000px;margin-top:46px">
    <main class="py-5">
      <div class="content container px-lg-5 p-4 bg-light rounded-3 min-vh-100">
        <h2 class="text-center display-3 fw-bold">Cultura</h2>
        <div style = "display: flex;justify-content: center; align-items: center; flex-direction: column; margin-top: 50px;">
          <div style = "font-size: 2em;margin: 20px 0;" id="countdown">15</div>
        </div>

        <form action="/partida/checkAnswer" method="POST">
          <div class="d-grid gap-2" style = "background-color:blueviolet; color:white;">
              <h1 class="display-2 fw-bold">{{pregunta}}</h1>
          </div>
          <br />
          <div class="grid text-center" style="--bs-columns: 2; --bs-gap: 5rem;">
            <button id = "{{answerKeys.0}}" name = "{{answerKeys.0}}" class="g-col-2 btn" style ="width:100%; margin: 0em 0em 2em 0em;background-color:blueviolet;color:white;" type="submit" value = "{{answers.0}}">
              <b>{{answers.0}}</b>
            </button>
            <button id = "{{answerKeys.1}}" name = "{{answerKeys.1}}" class="g-col-2 btn" style ="width:100%; margin: 0em 0em 2em 0em;background-color:blueviolet;color:white;" type="submit" value = "{{answers.1}}">
              <b>{{answers.1}}</b>
            </button>
            <button id = "{{answerKeys.2}}" name = "{{answerKeys.2}}" class="g-col-2 btn" style ="width:100%; margin: 0em 0em 2em 0em;background-color:blueviolet;color:white;" type="submit" value = "{{answers.2}}">
              <b>{{answers.2}}</b>
            </button>
            <button id = "{{answerKeys.3}}" name = "{{answerKeys.3}}" class="g-col-2 btn" style ="width:100%; margin: 0em 0em 2em 0em;background-color:blueviolet;color:white;" type="submit" value = "{{answers.3}}">
               <b>{{answers.3}}</b>
            </button>
          </div>
        </form>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content bg-success">
              <div class="modal-header">
                <h5 class="modal-title text-light" id="exampleModalLabel"><b>¡Acertaste!</b></h5>
                
              </div>
              <div class="modal-body text-dark">
                Has ganado <b>5 puntos!</b> Elige continuar o cerrar la partida aquí.
              </div>
              <div class="modal-footer">
                <form action ="/partida/continuePartida" method = "POST">
                  <button type="submit" class="btn btn-success">Siguiente pregunta</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const countdownDisplay = document.getElementById('countdown');
        let countdownValue = 15; // Valor inicial de la cuenta regresiva

        const countdown = setInterval(() => {
            countdownValue--;
            countdownDisplay.textContent = countdownValue;

            if (countdownValue <= 0) {
                clearInterval(countdown);
                countdownDisplay.textContent = '¡Tiempo acabado!';
                
                window.location.href = '/partida/checkAnswer';
            }
        }, 1000); // Decrementa cada segundo
    });
</script>
