<!-- Page content -->
    <div class="w3-content" style="max-width:2000px;margin-top:46px">
        <main class="py-5">
            <div class="content container px-lg-5 p-4 bg-light rounded-3 min-vh-100">
                <h2 class="text-center display-3 fw-bold">Cultura</h2>
                <h5 class="text-center">Bienvenido a la partida, <b>{{username}}</b></h5>
                <div class="d-grid gap-2 bg-warning">
                    <h1 class="display-2 fw-bold">{{pregunta}}</h1>
                </div>
                <br />
                <div class="grid text-center" style="--bs-columns: 2; --bs-gap: 5rem;">
                    {{#answers}}
                        <button id = "{{.}}" class="g-col-2 btn btn-warning" type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                            {{.}}
                        </button>
                        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Perdiste</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Understood</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/answers}}
                </div>
            </div>


        </main>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
    </div>
</body>
