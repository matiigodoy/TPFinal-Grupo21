    <script>
        // Gráfico de torta para preguntas por estado de creación
        var ctx = document.getElementById('questionsByCreationStatusChart').getContext('2d');
        var questionsByCreationStatusChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Preguntas creadas por usuarios', 'Preguntas no creadas por usuarios'],
                datasets: [{
                    data: [{{questionsByCreationStatus.createdQuestions }}, {{ questionsByCreationStatus.notCreatedQuestions }}],
                    backgroundColor: [
                        'rgba(54, 162, 235, 0.6)', // Azul para Preguntas Creadas
                        'rgba(255, 99, 132, 0.6)'  // Rojo para Preguntas No Creadas
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Preguntas por Estado de Creación'
                },
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });

        function generatePDF(canvasId, title) {
            const { jsPDF } = window.jspdf;
            const canvas = document.getElementById(canvasId);
            const imgData = canvas.toDataURL("image/png");
            const pdf = new jsPDF();
            pdf.text(title, 10, 10);
            pdf.addImage(imgData, 'PNG', 10, 20, 180, 160); // Ajusta el tamaño y la posición de la imagen en el PDF
            pdf.save(`${title}.pdf`);
        }
    </script>
        <script>
            // GRAFICO DE LINEAS PARA USUARIOS REGISTRADOS EN LA ULTIMA SEMANA
            var dates = [];
            var newUserCounts = [];

            {{#totalNewUsersLastWeek}}
            dates.push("{{date}}");
            newUserCounts.push({{count}});
            {{/totalNewUsersLastWeek}}


        var ctx = document.getElementById('newUsersLastWeekChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [{
                    label: 'Nuevos Usuarios',
                    data: newUserCounts,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)', // Color de fondo
