<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-pyDsmRY70+suUxl/II09PHNOAS9itDhcPsZxdBKU4oHqo2QsytZBv9Nzy0cl9hy9" crossorigin="anonymous">
    <style>
        .map-container {
            position: relative;
            width: 100%;
            height: 250px;
            margin-bottom: 20px; /* Espacio entre el mapa y los gr치ficos */
        }

        .chart-container {
            position: relative;
            width: 100%;
            height: 200px; /* Altura ajustable seg칰n necesidades */
        }

        canvas {
            max-height: 100% !important;
        }
    </style>
</head>
<body>
<div class="container mt-4">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="{{qr}}" alt="qr" width="150">
                            <div class="mt-3">
                                <h4>{{user.fullname}}</h4>
                                <p class="text-secondary mb-1">{{user.gender}}</p>
                                <p class="text-muted font-size-sm">游늷{{user.country}}</p>
                                <button class="btn btn-outline-primary">Copiar URL del perfil</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <input type="hidden" id="latitude" name="latitude" value="{{user.latitude}}">
                    <input type="hidden" id="longitude" name="longitude" value="{{user.longitude}}">
                    <div class="map-container">
                        <div id="map" style="height: 100%; width: 100%; border: 1px solid #000;"></div>
                    </div>
                    <small id="input-coordinates"></small>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Usuario</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.username}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.email}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Fecha de Registro</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.register_date}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Puntuaci칩n</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.score}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Posici칩n</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                #{{user.position}}
                            </div>
                        </div>
                    </div>
                </div>
                {{#isAdmin}}
                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3">Estad칤sticas de Preguntas</h6>
                                    <div class="chart-container">
                                        <canvas id="questionStatsChart"></canvas>
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger mt-3" onclick="generatePDF('questionStatsChart', 'Estadisticas_usuario')">Descargar PDF</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="d-flex align-items-center mb-3">Respuestas correctas por categor칤a</h6>
                                    <div class="chart-container">
                                        <canvas id="categoryStatsChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/isAdmin}}
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var latitude = parseFloat(document.getElementById("latitude").value);
        var longitude = parseFloat(document.getElementById("longitude").value);

        var map = L.map('map').setView([latitude, longitude], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        L.marker([latitude, longitude]).addTo(map)
                .bindPopup('Ubicaci칩n del usuario')
                .openPopup();

        var ctxQuestionStats = document.getElementById('questionStatsChart').getContext('2d');
        var questionStatsChart = new Chart(ctxQuestionStats, {
            type: 'pie',
            data: {
                labels: ['Correctas', 'Incorrectas'],
                datasets: [{
                    data: [{{correct}}, {{incorrect}}],
                    backgroundColor: ['#36A2EB', '#FF6384'],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                }
            }
        });

        var ctxCategoryStats = document.getElementById('categoryStatsChart').getContext('2d');
        var categoryStatsChart = new Chart(ctxCategoryStats, {
            type: 'bar',
            data: {
                labels: ['Historia', 'Cultura', 'Deportes'],
                datasets: [{
                    label: 'Respuestas Correctas',
                    data: [80, 72, 89],
                    backgroundColor: ['#FFCE56', '#36A2EB', '#4BC0C0'],
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                },
                plugins: {
                    legend: {
                        display: false,
                    },
                }
            }
        });
    });

    function generatePDF(canvasId, title) {
        const { jsPDF } = window.jspdf;
        const canvas = document.getElementById(canvasId);
        const imgData = canvas.toDataURL("image/png");
        const pdf = new jsPDF();
        pdf.text(title, 10, 10);
        pdf.addImage(imgData, 'PNG', 10, 20, 180, 160);
        pdf.save(`${title}.pdf`);
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

