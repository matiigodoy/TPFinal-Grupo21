<main class="py-5">
    <div class="content container px-lg-5 p-4 bg-light rounded-3">
        <h2 class="text-center display-3 fw-bold">Pregunta</h2>
        <br>
        <form action="/game/answerQuestion" method="post" class="row g-3">
            <input type="hidden" name="gameId" value="{{gameId}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="questionId" value="{{question.id}}">

            <div class="col-12">
                <h3>{{question.pregunta}}</h3>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedOption" value="option_a" required>
                    <label class="form-check-label">
                        {{question.option_a}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedOption" value="option_b" required>
                    <label class="form-check-label">
                        {{question.option_b}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedOption" value="option_c" required>
                    <label class="form-check-label">
                        {{question.option_c}}
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedOption" value="option_d" required>
                    <label class="form-check-label">
                        {{question.option_d}}
                    </label>
                </div>
            </div>

            <div class="col-12">
                <br>
                <div class="d-flex justify-content-center">
                    <input type="submit" value="Responder" class="btn btn-primary btn-lg">
                </div>
            </div>
        </form>
    </div>
</main>

